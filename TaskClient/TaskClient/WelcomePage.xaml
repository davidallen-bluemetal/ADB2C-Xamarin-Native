             x:Class="TaskClient.WelcomePage">
  <ContentPage.Content>
    <StackLayout>
      <Label Text="MSAL B2C Xamarin Forms Sample" VerticalOptions="Start" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" />
